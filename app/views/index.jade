doctype html
html(lang='en')
	head
		meta(charset="utf-8")
		title Cohort Klein Scale

		link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
		link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css')
		link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css")
		link(rel='stylesheet' href='/styles/main.min.css')

	body
		.container
			h1 Cohort Klein Scale 
				i.fa.fa-line-chart.chart-icon
			h2 Results from Klein Scale surveys, MACCP '17, Naropa, Fall 2014

			.charts

		script.template(type='x-handlebars-template', data-template-name='chartTemplate')
			h3 {{title}}
			.chart-container
			.y-axis {{yLabel}}
			.sub-x-axis
				.sub-x-axis-item(style='left:25%') {{xLeftSubLabel}}
				.sub-x-axis-item(style='left:75%') {{xRightSubLabel}}
			.x-axis {{xLabel}}

		script.template(type='x-handlebars-template', data-template-name='hoverLabel')
			.hover-label
				p.hover-label-title {{title}}
				p.hover-label-age
					b Age: 
					| {{age}}
				p.hover-label-value
					b Unselfconsciousness: 
					| {{value}}
				p.hover-label-desc {{description}}

		script(src='//code.jquery.com/jquery-2.1.1.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js')
		script.
			var kleinData = !{JSON.stringify(kleinData)}
		script(src='/scripts/components/cint/cint.js')
		script(src='/scripts/main.js')
